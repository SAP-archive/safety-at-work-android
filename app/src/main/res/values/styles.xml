<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Onboarding.Default.Light.Theme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="objectCellStyle">@style/TestObjectCell</item>
        <item name="actionModeStyle">@style/ContextActionMode</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="FioriTheme.AppBarOverlay" />

    <style name="AppTheme.PopupOverlay" parent="FioriTheme.PopupOverlay" />

    <style name="splashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_centered</item>
    </style>

    <style name="ContextActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="TestObjectCell" parent="ObjectCell">
        <item name="headlineTextAppearance">@style/Test.ObjectCell.Headline</item>
    </style>

    <style name="Test.ObjectCell.Headline" parent="TextAppearance.Fiori.ObjectCell.Headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogStyle" parent="FioriAlertDialogStyle" >
        <item name="android:maxLines">8</item>
    </style>

    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="NextStepTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="toolbarStyle">@style/NextStep.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/NextStep.Toolbar.Button.Navigation</item>
    </style>

    <style name="NextStep.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">@color/navigation_background</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_item</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_item</item>
    </style>

    <style name="NextStep.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/dark_main</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="NextStep.Text.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey_medium</item>
    </style>

    <style name="NextStep.Text.Red">
        <item name="android:textColor">@color/red_main</item>
    </style>

    <style name="NextStep.Text.Blue">
        <item name="android:textColor">@color/blue_main</item>
    </style>

    <style name="NextStep.Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NextStep.Text.Bold.Red">
        <item name="android:textColor">@color/red_main</item>
    </style>

    <style name="NextStep.Text.Bold.Red.CAPS">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="NextStep.Text.Bold.Purple">
        <item name="android:textColor">@color/purple_main</item>
    </style>

    <style name="NextStep.Text.Bold.Blue">
        <item name="android:textColor">@color/blue_main</item>
    </style>

    <style name="NextStep.Text.Bold.Green">
        <item name="android:textColor">@color/green_main</item>
    </style>

    <style name="NextStep.Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NextStep.Text.SubTitle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green_main</item>
    </style>

    <style name="NextStep.Text.MainTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_main</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="NextStep.Text.Status">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NextStep.Text.Input">
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/bg_chained_edit_text</item>
    </style>

    <style name="NextStep.Button.Transparent" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/purple_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="NextStep.Button.Transparent.Blue">
        <item name="android:textColor">@color/blue_main</item>
    </style>

    <style name="NextStep.Button.Transparent.Blue.Light">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NextStep.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:background">@drawable/bg_button_default</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">@drawable/ripple_button</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
    </style>

    <style name="NextStep.Button.AllCaps">
        <item name="textAllCaps">true</item>
    </style>

    <style name="NextStep.Button.Purple">
        <item name="android:background">@drawable/bg_button_purple</item>
    </style>

    <style name="NextStep.Button.Blue">
        <item name="android:background">@drawable/bg_button_blue</item>
    </style>

    <style name="NextStep.Button.WhiteBlue">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/blue_main</item>
    </style>

    <style name="NextStep.Button.Red">
        <item name="backgroundTint">@color/red_main</item>
        <item name="android:backgroundTint">@color/red_main</item>
    </style>

    <style name="NextStep.Button.Outlined">
        <item name="android:textColor">@color/blue_main</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_button_outlined</item>
    </style>

    <style name="NextStep.Button.Outlined.Red">
        <item name="android:textColor">@color/red_main</item>
        <item name="android:background">@drawable/bg_button_outlined_red</item>
    </style>

    <style name="NextStep.Button.Outlined.Purple">
        <item name="android:textColor">@color/purple_main</item>
        <item name="android:background">@drawable/bg_button_outlined_purple</item>
    </style>

    <style name="NextStep.Card" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_border_radius</item>
    </style>

    <style name="NextStep.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="titleTextColor">@color/dark_main</item>
        <item name="titleTextAppearance">@style/NextStep.Text.Bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="NextStep.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/navigation_icon_toolbar</item>
    </style>

    <style name="NextStep.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/switch_tint_selector</item>
        <item name="android:trackTint">@color/switch_tint_selector</item>
    </style>

    <style name="NextStep.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/NextStep.Text</item>
        <item name="android:textColor">@color/dark_main</item>
        <item name="android:paddingStart">@dimen/spacing_medium</item>
    </style>

</resources>
